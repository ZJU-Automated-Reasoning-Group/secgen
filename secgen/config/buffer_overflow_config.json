{
  "dangerous_functions": {
    "strcpy": {
      "type": "buffer_copy",
      "safe_alternative": "strncpy",
      "description": "Buffer overflow prone string copy function"
    },
    "strcat": {
      "type": "buffer_copy", 
      "safe_alternative": "strncat",
      "description": "Buffer overflow prone string concatenation function"
    },
    "sprintf": {
      "type": "format_string",
      "safe_alternative": "snprintf",
      "description": "Format string function without bounds checking"
    },
    "vsprintf": {
      "type": "format_string",
      "safe_alternative": "vsnprintf", 
      "description": "Variable argument format string function without bounds checking"
    },
    "gets": {
      "type": "input",
      "safe_alternative": "fgets",
      "description": "Dangerous input function that can cause buffer overflow"
    },
    "scanf": {
      "type": "input",
      "safe_alternative": "use with field width",
      "description": "Input function that can cause buffer overflow without field width"
    }
  },
  "bounds_check_patterns": [
    "<",
    ">",
    "<=",
    ">=",
    "sizeof(",
    "strlen("
  ],
  "detection_settings": {
    "check_dangerous_functions": true,
    "check_array_access": true,
    "check_bounds_validation": true,
    "confidence_threshold": 0.6
  },
  "patterns": {
    "dangerous_function_patterns": [
      "strcpy\\s*\\(",
      "strcat\\s*\\(",
      "sprintf\\s*\\(",
      "gets\\s*\\(",
      "scanf\\s*\\("
    ],
    "array_access_patterns": [
      "(\\w+)\\s*\\[\\s*(\\w+)\\s*\\]"
    ],
    "bounds_check_patterns": [
      "{index_var}\\s*<",
      "sizeof\\({array_name}\\)"
    ]
  }
}
