{
  "memory_allocation_functions": [
    "malloc",
    "calloc", 
    "realloc",
    "new"
  ],
  "memory_deallocation_functions": [
    "free",
    "delete"
  ],
  "detection_settings": {
    "track_allocations": true,
    "check_usage_after_free": true,
    "interprocedural_analysis": true,
    "confidence_threshold": 0.7
  },
  "patterns": {
    "allocation_patterns": [
      "(\\w+)\\s*=\\s*(malloc|calloc|realloc)\\s*\\(([^)]+)\\)",
      "(\\w+)\\s*=\\s*new\\s+([^;(]+)(?:\\([^)]*\\))?"
    ],
    "deallocation_patterns": [
      "free\\s*\\(\\s*(\\w+)\\s*\\)",
      "delete\\s+(\\w+)"
    ],
    "usage_patterns": [
      "\\*{var_name}",
      "{var_name}\\s*\\[",
      "{var_name}\\s*\\.",
      "{var_name}\\s*\\->"
    ]
  }
}
